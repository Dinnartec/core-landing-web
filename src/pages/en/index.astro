---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { Header } from '@/components/layout'
import {
  HeroSection,
  ExperienceBanner,
  AboutSection,
  SolutionsSection,
  PricingSection,
  FactorySection,
  LabsSection,
  ContactSection,
  Footer,
} from '@/components/sections'
import { getTranslations } from '@/lib/i18n'

const lang = 'en'
const t = getTranslations(lang)
---

<BaseLayout
  title="Dinnartec â€” Innovating the future, improving the present"
  description={t('hero.description')}
  lang={lang}
>
  <Header
    client:load
    lang={lang}
    translations={{
      solutions: t('nav.solutions'),
      pricing: t('nav.pricing'),
      factory: t('nav.factory'),
      labs: t('nav.labs'),
      contact: t('nav.contact'),
    }}
  />

  <main>
    <HeroSection
      client:load
      lang={lang}
      translations={{
        title: t('hero.title'),
        tagline: t('hero.tagline'),
        description: t('hero.description'),
        cta: t('hero.cta'),
        learnMore: t('hero.learnMore'),
        badge: t('hero.badge'),
      }}
    />

    <ExperienceBanner
      lang={lang}
      translations={{
        text: t('experience.text'),
      }}
    />

    <AboutSection
      lang={lang}
      translations={{
        label: t('about.label'),
        title: t('about.title'),
        description: t('about.description'),
        content: t('about.content'),
        pillars: t('about.pillars'),
        pillarItems: t.array('about.pillarItems'),
      }}
    />

    <SolutionsSection
      lang={lang}
      translations={{
        label: t('solutions.label'),
        titlePrefix: t('solutions.titlePrefix'),
        titleHighlight: t('solutions.titleHighlight'),
        subtitle: t('solutions.subtitle'),
        description: t('solutions.description'),
        tagline: t('solutions.tagline'),
        cta: t('solutions.cta'),
        steps: {
          diagnosis: {
            title: t('solutions.steps.diagnosis.title'),
            description: t('solutions.steps.diagnosis.description'),
          },
          sprint: {
            title: t('solutions.steps.sprint.title'),
            description: t('solutions.steps.sprint.description'),
          },
          support: {
            title: t('solutions.steps.support.title'),
            description: t('solutions.steps.support.description'),
          },
        },
      }}
    />

    <PricingSection
      client:load
      lang={lang}
      translations={{
        label: t('pricing.label'),
        title: t('pricing.title'),
        subtitle: t('pricing.subtitle'),
        diagnosis: {
          name: t('pricing.diagnosis.name'),
          price: t('pricing.diagnosis.price'),
          duration: t('pricing.diagnosis.duration'),
          description: t('pricing.diagnosis.description'),
          features: t.array('pricing.diagnosis.features'),
          cta: t('pricing.diagnosis.cta'),
        },
        sprint: {
          name: t('pricing.sprint.name'),
          description: t('pricing.sprint.description'),
          cta: t('pricing.sprint.cta'),
          tiers: {
            s: {
              name: t('pricing.sprint.tiers.s.name'),
              price: t('pricing.sprint.tiers.s.price'),
              duration: t('pricing.sprint.tiers.s.duration'),
              description: t('pricing.sprint.tiers.s.description'),
              features: t.array('pricing.sprint.tiers.s.features'),
            },
            m: {
              name: t('pricing.sprint.tiers.m.name'),
              price: t('pricing.sprint.tiers.m.price'),
              duration: t('pricing.sprint.tiers.m.duration'),
              description: t('pricing.sprint.tiers.m.description'),
              features: t.array('pricing.sprint.tiers.m.features'),
            },
            l: {
              name: t('pricing.sprint.tiers.l.name'),
              price: t('pricing.sprint.tiers.l.price'),
              duration: t('pricing.sprint.tiers.l.duration'),
              description: t('pricing.sprint.tiers.l.description'),
              features: t.array('pricing.sprint.tiers.l.features'),
            },
          },
        },
        retainer: {
          name: t('pricing.retainer.name'),
          description: t('pricing.retainer.description'),
          cta: t('pricing.retainer.cta'),
          tiers: {
            essential: {
              name: t('pricing.retainer.tiers.essential.name'),
              price: t('pricing.retainer.tiers.essential.price'),
              hours: t('pricing.retainer.tiers.essential.hours'),
              description: t('pricing.retainer.tiers.essential.description'),
              features: t.array('pricing.retainer.tiers.essential.features'),
            },
            growth: {
              name: t('pricing.retainer.tiers.growth.name'),
              price: t('pricing.retainer.tiers.growth.price'),
              hours: t('pricing.retainer.tiers.growth.hours'),
              description: t('pricing.retainer.tiers.growth.description'),
              features: t.array('pricing.retainer.tiers.growth.features'),
            },
            scale: {
              name: t('pricing.retainer.tiers.scale.name'),
              price: t('pricing.retainer.tiers.scale.price'),
              hours: t('pricing.retainer.tiers.scale.hours'),
              description: t('pricing.retainer.tiers.scale.description'),
              features: t.array('pricing.retainer.tiers.scale.features'),
            },
          },
        },
        packages: {
          title: t('pricing.packages.title'),
          subtitle: t('pricing.packages.subtitle'),
          items: {
            starter: {
              name: t('pricing.packages.items.starter.name'),
              includes: t('pricing.packages.items.starter.includes'),
              price: t('pricing.packages.items.starter.price'),
              savings: t('pricing.packages.items.starter.savings'),
            },
            growth: {
              name: t('pricing.packages.items.growth.name'),
              includes: t('pricing.packages.items.growth.includes'),
              price: t('pricing.packages.items.growth.price'),
              savings: t('pricing.packages.items.growth.savings'),
            },
            scale: {
              name: t('pricing.packages.items.scale.name'),
              includes: t('pricing.packages.items.scale.includes'),
              price: t('pricing.packages.items.scale.price'),
              savings: t('pricing.packages.items.scale.savings'),
            },
          },
        },
      }}
    />

    <FactorySection
      lang={lang}
      translations={{
        label: t('factory.label'),
        titlePrefix: t('factory.titlePrefix'),
        titleHighlight: t('factory.titleHighlight'),
        subtitle: t('factory.subtitle'),
        description: t('factory.description'),
        content: t('factory.content'),
        status: t('factory.status'),
        badge: t('factory.badge'),
      }}
    />

    <LabsSection
      lang={lang}
      translations={{
        label: t('labs.label'),
        titlePrefix: t('labs.titlePrefix'),
        titleHighlight: t('labs.titleHighlight'),
        subtitle: t('labs.subtitle'),
        description: t('labs.description'),
        content: t('labs.content'),
        status: t('labs.status'),
        badge: t('labs.badge'),
        areas: {
          experimental: {
            title: t('labs.areas.experimental.title'),
            description: t('labs.areas.experimental.description'),
          },
          emerging: {
            title: t('labs.areas.emerging.title'),
            description: t('labs.areas.emerging.description'),
          },
          capabilities: {
            title: t('labs.areas.capabilities.title'),
            description: t('labs.areas.capabilities.description'),
          },
        },
      }}
    />

    <ContactSection
      client:load
      lang={lang}
      translations={{
        label: t('contact.label'),
        title: t('contact.title'),
        description: t('contact.description'),
        cta: t('contact.cta'),
        form: {
          name: t('contact.form.name'),
          email: t('contact.form.email'),
          message: t('contact.form.message'),
          submit: t('contact.form.submit'),
          success: t('contact.form.success'),
          error: t('contact.form.error'),
        },
        alternative: t('contact.alternative'),
      }}
    />
  </main>

  <Footer
    lang={lang}
    translations={{
      tagline: t('footer.tagline'),
      navigation: t('footer.navigation'),
      connect: t('footer.connect'),
      copyright: t('footer.copyright'),
    }}
    navTranslations={{
      solutions: t('nav.solutions'),
      pricing: t('nav.pricing'),
      factory: t('nav.factory'),
      labs: t('nav.labs'),
      contact: t('nav.contact'),
    }}
  />
</BaseLayout>
